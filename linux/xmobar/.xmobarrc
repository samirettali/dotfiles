-- vi:ft=haskell

Config {
     -- Appearance
      font     = "xft:JetBrainsMono Nerd Font:weight=Medium:size=10,xft:Noto Color Emoji:size=10"
    , bgColor  = "#0a0d10"
    , fgColor  = "#e6e8ee"
    , position = TopSize C 100 30
    , border = BottomB
    , borderColor = "#181a23"
    , borderWidth = 2

    -- Behaviour
    , lowerOnStart     = True    -- send to bottom of window stack on start
    , hideOnStart      = False   -- start with window unmapped (hidden)
    , allDesktops      = True    -- show on all desktops
    , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
    , pickBroadest     = False   -- choose widest display (multi-monitor)
    , persistent       = True    -- enable/disable hiding (True = disabled)

    -- Layout
    , sepChar = "%"
    , alignSep = "}{"
    , template = " %UnsafeStdinReader% }{ <fc=#b5d5ff>  %kbd%</fc><fc=#555555> | </fc><fc=#55ff55>%cpu%</fc><fc=#555555> | </fc><fc=#ff55ff>%temperature%</fc><fc=#555555> | </fc><fc=#ff5555>%memory%</fc><fc=#555555> | </fc><fc=#5555ff>%battery%</fc><fc=#555555> | </fc><fc=#55ffff>%volume%</fc><fc=#555555> | </fc><fc=#ffff55>%date%</fc><fc=#555555> | </fc><fc=#ff5555>%time%</fc>%trayerpad% "


    -- Plugins
    , commands = [
          Run Date    "%a %d" "date" 50
        , Run Date    "%H:%M:%S" "time" 10
        , Run Cpu     [ "--template", " <total>%"
                      ] 20
        , Run Memory  [ "--template", " <usedratio>%"
                      ] 20
        -- , Run Battery [ "--template" , "BAT: <left>%"
                      -- ] 50
        -- , Run Volume  "default" "Master" [
                       -- "--template", "VOL: <volume>%"
                      -- ] 10
        , Run Com "/home/samir/.bin/temperature" [] "temperature" 10
        , Run Com "/home/samir/.bin/battery" [] "battery" 10
        , Run Com "/home/samir/.bin/volume" [] "volume" 10
        , Run Com "/home/samir/.bin/padding-icon.sh" ["panel"] "trayerpad" 10
        , Run Kbd [("us", "US"), ("it", "IT")]
        , Run MultiCoreTemp ["-t", "TEMP: <avg>°C", "--"] 50
        , Run MPD ["-t", "<state>: <artist> - <title>"] 3

        , Run UnsafeStdinReader
    ]
}
