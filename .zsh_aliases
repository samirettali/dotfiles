# Better defaults
if [ $(uname) = 'Darwin' ]; then
    alias ls="ls -GFp"
    alias f="fd"
    alias upg="brew update && brew upgrade && brew cask upgrade && nvim +PlugUpdate +PlugUpgrade +UpdateRemotePlugin +exit"
    # Copy output of last command to clipboard
    alias cl="fc -e -|pbcopy"
else
    alias ls="ls --color -h --group-directories-first"
    alias f="fdfind"
fi

# Dotfiles editing
alias dots="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"
alias ds="dots status"
alias dt="dots grep -i todo"

# Scripts
alias wip="curl icanhazip.com"
alias clonesite="wget --mirror --recursive --no-clobber --page-requisites --html-extension --convert-links --restrict-file-names=windows --no-parent"
alias memusage="ps -o rss,command -waxc | sort -n"

# Software
alias sv="sudo nvim"
alias tree="tree -C"
alias vim="nvim"
alias tl="tmux ls"

# Youtube
alias ytdl="youtube-dl -R infinite -f bestvideo+bestaudio --output \"%(title)s.%(ext)s\""
alias ytmp3="youtube-dl -R infinite -i --extract-audio --audio-format mp3 --audio-quality 0 -w --output \"%(title)s.%(ext)s\""
