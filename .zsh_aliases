# Better defaults
alias ls="ls -N --group-directories-first --color=auto"

# Systemd
alias start="sudo systemctl start"
alias restart="sudo systemctl restart"
alias stop="sudo systemctl stop"
alias status="systemctl status"

# Distro dependent aliases
if uname -a | grep -i 'ubuntu\|debian' > /dev/null 2>/dev/null; then
    # Apt
    alias apti="sudo apt install"
    alias aptr="sudo apt remove --purge"
    alias aptu="sudo apt-get update && sudo apt-get upgrade"
fi

# Fast cd
alias cdw="cd /run/media/samir/WhitePassport"
alias cdb="cd /run/media/samir/BlackPassport"
alias b="cd -"

# Fans fix (to remove)
alias fans="sudo ~/Git/dell-bios-fan-control/dell-bios-fan-control 0 && sudo i8kctl fan 0 0 && sudo ~/Git/dell-bios-fan-control/dell-bios-fan-control 1"
alias forcefans="sudo ~/Git/dell-bios-fan-control/dell-bios-fan-control 0 && sudo i8kctl fan 0 0"
alias cool="sudo ~/Git/dell-bios-fan-control/dell-bios-fan-control 0 && sudo i8kctl fan 2 2"

# Dotfiles editing
alias vz="vim ~/.zshrc && source ~/.zshrc"
alias va="vim ~/.zsh_aliases && source ~/.zshrc"
alias vf="vim ~/.zsh_functions && source ~/.zshrc"
alias vt="vim ~/.tmux.conf"
alias vv="vim ~/.config/nvim/init.vim"
alias rlz="source ~/.zshrc"
alias config="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"
alias repos="git -C ~/Scripts status && git -C ~/.cfg --work-tree=$HOME status"

# Tmux
alias tl="tmux ls"
alias tt="tmux new -A -s term"

alias -g gp="| grep -i"

# Scripts
alias copy="xclip -sel clip"
alias wip="curl ipinfo.io; echo"
alias countfiles="find . -type f | wc -l"
alias countfolders="find . -type d | wc -l"
alias filetypes="find . -type f -printf '%f\n' | sed -r -n 's/.+(\..*)$/\1/p' | sort | uniq -c | sort -bn"
alias clonesite="wget --mirror --recursive --no-clobber --page-requisites --html-extension --convert-links --restrict-file-names=windows --no-parent"

# Development
alias cm="clear; make"
alias cj="clear && mkdir -p bin && javac -g -d bin -sourcepath src src/Main.java; cd bin; java -ea Main; cd ..;"
alias cjm="clear && javac Main.java && java Main && rm *.class"
alias gccall="gcc -g -pedantic -Wall -Wextra -Wshadow -Wunreachable-code -Wconversion -Werror -Wno-padded"
alias mkpc="mkdir {src,build,bin} && touch Makefile"

# Software
alias v="nvim *"
alias vim="nvim"
alias nano="nvim"
alias emacs="nvim"
alias sv="sudo nvim"
alias vimdiff="nvim -d"
alias s="sudo su -"
alias reg="~/Git/regldg/regldg"
alias regd="~/Git/regldg/regldg --debug-code=1 --universe-set=7 --universe-checking=3 --max-length=8"

# Misc
alias c="clear"
alias kdereload="kquitapp5 plasmashell; kstart5 plasmashell"

# Youtube
alias ytdl="youtube-dl -R infinite -f bestvideo+bestaudio --output \"%(title)s.%(ext)s\""
alias ytmp3="youtube-dl -R infinite --extract-audio --audio-format mp3 --audio-quality 0 -w --output \"%(title)s.%(ext)s\""

# CTF
alias pyweb="python2 -m SimpleHTTPServer 9999"
alias kali="cd ~/CTF/Kali; vagrant up && vagrant ssh"
alias stegsolve="java -jar ~/CTF/Tools/Stego/stegsolve.jar; disown"

# University
alias lft="cd ~/Uni/2/LFT/18-19/Laboratorio/LFT-Ettali/src"
alias asd="cd ~/Uni/2/asd/18-19/laboratorio-algoritmi-2018-19"
