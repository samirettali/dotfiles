# Better defaults
if [ $(uname) = 'Darwin' ]; then
    alias ls="ls -G"
    alias upg="brew update && brew upgrade && brew cask upgrade"
else
    alias ls="ls --color -h --group-directories-first"
    alias copy="xclip -sel clip"
fi

# Dotfiles editing
alias va="vim ~/.zsh_aliases && source ~/.zshrc"
alias vf="vim ~/.zsh_functions && source ~/.zshrc"
alias vt="vim ~/.tmux.conf"
alias vv="vim ~/.config/nvim/init.vim"
alias vz="vim ~/.zshrc && source ~/.zshrc"
alias dots="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"

# Git repositories
alias repos="git -C ~/Scripts status && git -C ~/.cfg --work-tree=$HOME status"
alias dots-gist="gist -u 9f190ac180aecba1872867acc1e9c83b $HOME/Scripts/install.sh"

# Tmux
alias tl="tmux ls"
alias tt="tmux new -A -s term"

alias -g gp="| grep -i"

# Scripts
alias wip="curl ipinfo.io; echo"
alias clonesite="wget --mirror --recursive --no-clobber --page-requisites --html-extension --convert-links --restrict-file-names=windows --no-parent"

# Development
alias cm="clear; make"
alias cj="clear && mkdir -p bin && javac -g -d bin -sourcepath src src/Main.java; cd bin; java -ea Main; cd ..;"
alias cjm="clear && javac Main.java && java Main && rm *.class"
alias gccall="gcc -g -pedantic -Wall -Wextra -Wshadow -Wunreachable-code -Wconversion -Werror -Wno-padded"
alias mkproject="~/Scripts/create-project.sh"

# Software
alias vim="nvim"
alias vanillavim="nvim -u /dev/null"
alias sv="sudo nvim"
alias vimdiff="nvim -d"
alias s="sudo su -"
alias regd="regldg --debug-code=1 --universe-set=7 --universe-checking=3 --max-length=8"

# Youtube
alias ytdl="youtube-dl -R infinite -f bestvideo+bestaudio --output \"%(title)s.%(ext)s\""
alias ytmp3="youtube-dl -R infinite -i --extract-audio --audio-format mp3 --audio-quality 0 -w --output \"%(title)s.%(ext)s\""

# Vagrant
alias vup="vagrant up"
alias vss="vagrant ssh"
alias vag="vagrant up; vagrant ssh"
alias kali="cd ~/CTF/kali-ctf; vagrant up && vagrant ssh"
